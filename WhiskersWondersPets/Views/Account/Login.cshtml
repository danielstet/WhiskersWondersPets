@model WhiskersWondersPets.Models.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div class="mt-36">
        <form asp-action="Login" class="mx-auto max-w-sm">
            <div class="text-center">
                <h1 class="text-gray-900 text-4xl font-bold tracking-tight sm:text-2xl">Login Page</h1>
            </div>
            <div class="mb-5">
                <label class="mb-2 text-gray-900 block text-sm font-medium">Your username</label>
                <input asp-for="Username" type="text" id="username" class="bg-gray-50 border-gray-300 text-gray-900 p-2.5 block w-full rounded-lg border text-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="admin | Admin123! / user | User123!" required />
            </div>
            <div class="mb-5">
                <label for="password" class="mb-2 text-gray-900 block text-sm font-medium">Your password</label>
                <input asp-for="Password" type="password" id="password" class="bg-gray-50 border-gray-300 text-gray-900 p-2.5 block w-full rounded-lg border text-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" required />
            </div>
            <button type="submit" class="text-white bg-blue-700 px-5 py-2.5 w-full rounded-lg text-center text-sm font-medium hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 sm:w-auto dark:hover:bg-blue-700 dark:focus:ring-blue-800">Submit</button>
        </form>
        <div>
            <a asp-action="GoogleLogin">Google login</a>
        </div>
    </div>
</body>
</html>
